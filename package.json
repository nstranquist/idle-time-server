{
  "name": "idle-time-server",
  "version": "1.0.0",
  "description": "server for the idle time app",
  "author": "nicostran",
  "license": "ISC",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test mocha --recursive './tests' --timeout 5000",
    "es6test": "nyc --reporter=html --reporter=text --reporter=lcov mocha --recursive './tests' --require @babel/register",
    "build": "./node_modules/.bin/babel ./src --out-dir build",
    "start": "node ./src/bin/www | bunyan",
    "dev": "nodemon --exec babel-node ./src/bin/www | bunyan",
    "lint": "./node_modules/.bin/eslint ./src",
    "pretty": "prettier --write '**/*.{js,json}' '!node_modules/**'",
    "postpretty": "yarn lint --fix",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "swagger": "swagger-jsdoc -d build/config/swagger.js build/routes/**.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.1.0",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.21",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "axios": "^0.20.0",
    "bluebird": "^3.7.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^8.1.1",
    "node-fetch": "^2.6.7",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2"
  }
}
